<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/select_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_select_calendar"
        android:gravity="center_vertical|left"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Spinner
        android:id="@+id/spinner_calendar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/select_calendar" />
    	


    <LinearLayout
	   android:id="@+id/time_comboseekbar"
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:orientation="vertical"
       android:layout_below="@+id/spinner_calendar"
       android:layout_marginTop="16dp"
	/>
    
    <TextView
        android:id="@+id/seekbar_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_comboseekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/seekbar_hint" 
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>